<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lucid Hotels</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Request.IsAuthenticated && @User.IsInRole("ADMIN"))
    {
        <ul>
            <li><img style="max-height:100px; max-width: 100px; padding-top: 10px;" src="~/Content/Images/Lucid Hotels Logo.ico"></li>
            <li>@Html.ActionLink("[ Home ]", "Search", "Booking")</li>
            <li>@Html.ActionLink("[ Book Now ]", "Create", "Booking")</li>
            <li>@Html.ActionLink("[ About ]", "About", "Home")</li>
            <li>@Html.ActionLink("[ Partners ]", "Partners", "Home")</li>
            @Html.Partial("_LoginPartial")

        </ul>
    }
    else
    {
        <ul>
            <li><img style="max-height:100px; max-width: 100px; padding-top: 10px;" src="~/Content/Images/Lucid Hotels Logo.ico"></li>
            <li>@Html.ActionLink("[ Home ]", "Search", "Booking")</li>
            <li>@Html.ActionLink("[ About ]", "About", "Home")</li>
            <li>@Html.ActionLink("[ Partners ]", "Partners", "Home")</li>
            @Html.Partial("_LoginPartial")

        </ul>
    }
    <hr>

    <div>
        @RenderBody()
        <br>
        <hr />
        <footer class="footer">
            <p>
                <b>
                    Lucid Hotels
                    <br>Call us at +1 (907)-123-4567
                    <br>Email us at CustomerSupport@LucidHotels.com
                    <br>Copyright &copy; @DateTime.Now.Year Lucid Hotels®
                </b>

            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
