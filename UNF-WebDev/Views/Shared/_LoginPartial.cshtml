@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "hide-fom" }))
    {
        @Html.AntiForgeryToken()

        @*
            @User.IsInRole("ADMIN")
            
            Add in the function for the different pages based off the role they are apart of.
        *@

        <li><a href="">Welcome @User.Identity.Name!</a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

    }
}
else
{

    <li>@Html.ActionLink("[ Register ]", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("[ Login ]", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

}
